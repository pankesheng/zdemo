<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thanone.zdemo.mapper.user.UserMapper">
	
	<!-- <cache /> -->
	
	<sql id="qbuilder">
		<where>
			<if test="qbuilder.id != null">t_user.id = #{qbuilder.id}</if>
			<if test="qbuilder.realname != null">AND t_user.realname like #{qbuilder.realname}</if>
			<if test="qbuilder.username != null">AND t_user.username = #{qbuilder.username}</if>
			<if test="qbuilder.password != null">AND t_user.password = #{qbuilder.password}</if>
			<if test="qbuilder.role != null">AND t_user.role = #{qbuilder.role}</if>
			<if test="qbuilder.state != null">AND t_user.state = #{qbuilder.state}</if>
			<!-- 
				<if test="qbuilder.timebegin != null">AND t_xxx.time &gt;= #{qbuilder.timebegin}</if>
				<if test="qbuilder.timeend != null">AND t_xxx.time &lt; #{qbuilder.timeend}</if>
				<if test="qbuilder.imgsvalue != null">AND t_xxx.imgs is not null AND t_xxx.imgs != ''</if>
				<if test="qbuilder.dgcjnotnull != null">AND t_backbone.dgcj is not null</if>
				<if test="qbuilder.dgcjisnull != null">AND t_backbone.dgcj is null</if>
				<if test="qbuilder.states != null">AND t_xxx.state in
					<foreach item="state" index="index" collection="qbuilder.states" open="(" separator="," close=")">
						#{state}
					</foreach>
				</if>
			 -->
		</where>
	</sql>
	
	<select id="find" resultType="User">
		SELECT * FROM t_user
		<!-- 
		SELECT
			t_user.*,
			a.name 'aname',
			b.name 'bname'
		FROM
			t_xxx
			LEFT JOIN t_aaa a ON a.id=t_xxx.aid
			LEFT JOIN t_bbb b ON b.id=t_xxx.bid
		 -->
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
		<choose>
			<when test="orderby != null">
				ORDER BY t_user.${orderby}
			</when>
			<otherwise>
				ORDER BY t_user.role
			</otherwise>
		</choose>
		<choose>
			<when test="start != null and size != null">
				LIMIT #{start},#{size}
			</when> 
			<when test="start == null and size != null">
				LIMIT #{size}
			</when> 
		</choose>
	</select>
	
	<select id="getTotalRows" resultType="int">
		SELECT COUNT(*) FROM t_user
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
	</select>
	
	<select id="findById" resultType="User">
		SELECT * FROM t_user WHERE id = #{id}
	</select>
	
	<insert id="insert">
		INSERT INTO t_user
			(id,username,password,role,realname,state,ctime,utime)
		VALUES
			(#{object.id},#{object.username},#{object.password},#{object.role},#{object.realname},#{object.state},now(),now())
	</insert>
	
	<update id="update">
		UPDATE t_user
		SET
			username = #{object.username},
			password = #{object.password},
			role = #{object.role},
			realname = #{object.realname},
			state = #{object.state},
			utime = now()
		WHERE id = #{object.id}
	</update>
	
	<update id="updatePassword">
		UPDATE t_user SET password = #{password} WHERE id = #{id}
	</update>
	
	<update id="updateState">
		UPDATE t_user SET state = #{value} WHERE id = #{id}
	</update>
	
	<delete id="delete">
		DELETE FROM t_user WHERE id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM t_user WHERE id in 
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>
